<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for automotive -->
    <style name="Theme.ActivityLauncher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text appearances for automotive -->
        <item name="textAppearanceListItem">@style/TextAppearance.ActivityLauncher.Automotive.ListItem</item>
        <!-- Larger touch targets in menus -->
        <item name="actionBarSize">@dimen/touch_target_min</item>
        <!-- Fix for navigationIconTint conflict -->
        <item name="navigationIconTint">?attr/colorPrimary</item>
    </style>

    <!-- Automotive-specific text styles with larger fonts -->
    <style name="TextAppearance.ActivityLauncher.Automotive.ListItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>